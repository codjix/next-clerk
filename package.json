    "@mantine/hooks": "^8.2.8",
    "@mantine/notifications": "^8.2.8",
    "@tanstack/react-query": "^5.85.6",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "jotai": "^2.13.1",
    "mantine-form-zod-resolver": "^1.3.0",
    "next": "^15.5.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "universal-cookie": "^8.0.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/bun": "^1.2.21",
    "@types/node": "^24.3.0",
