{
  "name": "next-clerk",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build --turbo",
    "start": "next start",
    "bundle": "bun --bun ./scripts/bundle.ts",
    "server": "HOSTNAME=0.0.0.0 bun --bun dist/server.js",
    "db:push": "drizzle-kit generate && bun --bun ./scripts/migrate.ts",
    "db:seed": "bun --bun ./scripts/seed.ts",
    "db:studio": "drizzle-kit studio",
    "format": "prettier --write .",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.31.6",
    "@iconify/react": "^6.0.0",
